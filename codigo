alert("BEM VINDO AO JOGO DE PERGUNTAS E RESPOSTAS!");

class pergunta {
    enunciado: string;
    opcoes: string[];
    respostacorreta: number;

    constructor(enunciado: string, opcoes: string[], respostacorreta: number) {
        this.enunciado = enunciado;
        this.opcoes = opcoes;
        this.respostacorreta = respostacorreta;
    }

    mostrar(): string {
        let texto = this.enunciado + "\n";
        for (let i = 0; i < this.opcoes.length; i++) {
            texto += (i + 1) + " - " + this.opcoes[i] + "\n";
        }
        return texto;
    }

    verificar(resposta: number): boolean {
        return resposta === this.respostacorreta;
    }
}

let perguntas: pergunta[] = [
    new pergunta("Qual é a capital do Brasil?", ["São Paulo", "Brasília", "Rio de Janeiro"], 2),
    new pergunta("Qual o maior oceano do mundo?", ["Atlântico", "Índico", "Pacífico"], 3),
    new pergunta("Quantos estados tem o Brasil?", ["26", "28", "27"], 3),
    new pergunta("Qual a raiz quadrada de 81?", ["8", "9", "6"], 2),
    new pergunta("Qual a capital do Piauí?", ["Barras", "Piripiri", "Teresina"], 3),
    new pergunta("Qual o maior time do Brasil?", ["Santos", "São Paulo", "Flamengo"], 3),
    new pergunta("Quantos estados físicos tem a água?", ["2", "5", "3"], 3),
    new pergunta("Qual a matéria mais resistente da natureza?", ["Teia de Aranha", "Rocha", "Madeira"], 1),
    new pergunta("Qual o maior planeta do sistema solar?", ["Terra", "Marte", "Júpiter"], 3),
    new pergunta("Qual linguagem é usada na web?", ["Python", "JavaScript", "C++"], 2)
];

let pontos = 0;

for (let i = 0; i < perguntas.length; i++) {
    let resposta = Number(prompt(perguntas[i].mostrar()));
    
    if (resposta < 1 || resposta > perguntas[i].opcoes.length || isNaN(resposta)) {
        alert("Resposta inválida. Pulando pergunta.");
        continue;
    }

    if (perguntas[i].verificar(resposta)) {
        alert("Resposta certa!");
        pontos++;
    } else {
        alert("Resposta errada!");
    }
}

alert("Fim do jogo! Você acertou " + pontos + " de " + perguntas.length);
